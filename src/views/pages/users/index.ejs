<%- include("../../partials/header", { button: { name: "Add New User", link: "#", icon: "fas fa-user-plus" } }) %>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Users Table -->
    <div class="card">
      <div class="card-body">
        <table id="usersTable" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role(s)</th>
              <th>Status</th>
              <th>Last Login</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Sample Row -->
            <tr>
              <td>USR-001</td>
              <td>Kevin Avila</td>
              <td>kevin.avila@ub.edu.bz</td>
              <td>
                <span class="badge badge-primary">Employee</span>
                <span class="badge badge-info">IT Auditor</span>
              </td>
              <td><span class="badge badge-success">Active</span></td>
              <td>2025-04-06 10:34 AM</td>
              <td>
                <a href="#" class="btn btn-sm btn-info" title="View"><i class="fas fa-eye"></i></a>
                <a href="#" class="btn btn-sm btn-warning" title="Edit"><i class="fas fa-edit"></i></a>
                <a href="#" class="btn btn-sm btn-secondary" title="Reset Password"><i class="fas fa-key"></i></a>
                <a href="#" class="btn btn-sm btn-danger" title="Deactivate"><i class="fas fa-user-slash"></i></a>
              </td>
            </tr>
            <!-- More rows dynamically -->
          </tbody>
        </table>
      </div>
    </div>

  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script>
  window.onload = function () {
    $('#usersTable').DataTable({
      responsive: true,
      lengthChange: true,
      autoWidth: false
    });
  };
</script>

