<%- include("../../partials/header", { button: { name: "Add New Category", link: "#", icon: "fas fa-plus-circle" } }) %>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Categories Table -->
    <div class="card">
      <div class="card-body">
        <table id="categoriesTable" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Category Name</th>
              <th>Description</th>
              <th>Total Assets</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Sample Row -->
            <tr>
              <td>Computer</td>
              <td>Desktops, Laptops, and related peripherals</td>
              <td>32</td>
              <td>
                <a href="#" class="btn btn-sm btn-warning" title="Edit"><i class="fas fa-edit"></i></a>
                <a href="#" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
            <!-- Add more rows dynamically -->
          </tbody>
        </table>
      </div>
    </div>

  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<script>
  window.onload = function () {
    $('#categoriesTable').DataTable({
      responsive: true,
      lengthChange: true,
      autoWidth: false
    });
  };
</script>

