<%- include("../../partials/header", { button: { name: "Back to Campuses", link: "/campuses", icon: "fas fa-arrow-left" } }) %>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <form action="/campuses/create" method="POST">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label>Campus Name <span class="text-danger">*</span></label>
            <input type="text" name="name" class="form-control" required>
          </div>
          <div class="form-group">
            <label>Location</label>
            <input type="text" name="location" class="form-control">
          </div>
        </div>
        <div class="card-footer text-right">
          <a href="/campuses" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</section>

<%- include("../../partials/footer") %>
